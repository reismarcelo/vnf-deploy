<config-template xmlns="http://tail-f.com/ns/config/1.0">
    <nfvo xmlns="http://tail-f.com/pkg/tailf-etsi-rel2-nfvo">
        <vnf-info>
            <esc xmlns="http://tail-f.com/pkg/tailf-etsi-rel2-nfvo-esc">
                <vnf-deployment>
                    <tenant>{/tenant}</tenant>
                    <deployment-name>{$DEPLOYMENT_NAME}</deployment-name>
                    <esc>{/esc}</esc>
                    <username>centos</username>
                    <vnf-info>
                        <name>{/name}</name>
                        <vnfd>CSR1kv</vnfd>
                        <vnfd-flavor>basic</vnfd-flavor>
                        <instantiation-level>basic</instantiation-level>
                        <vdu>
                            <id>CSR</id>
                            <bootup-time>300</bootup-time>
                            <recovery-wait-time>120</recovery-wait-time>
                            <image-name>csr1kv-16-06-04</image-name>
                            <flavor-name>csr-flavor</flavor-name>
                            <day0>
                                <destination>iosxe_config.txt</destination>
                                <url>http://192.168.200.5:8010/csr_day0.txt</url>
                                <variable>
                                    <name>ADMIN_PWD</name>
                                    <value>cisco</value>
                                </variable>
                                <variable>
                                    <name>HOSTNAME</name>
                                    <value>csr-test-1</value>
                                </variable>
                                <variable>
                                    <name>MGMT_IP</name>
                                    <value>192.168.200.201</value>
                                </variable>
                                <variable>
                                    <name>MGMT_ADDR</name>
                                    <value>{$MGMT_ADDR}</value>
                                </variable>
                                <variable>
                                    <name>INET_ADDR</name>
                                    <value>{$INET_ADDR}</value>
                                </variable>
                            </day0>
                            <authgroup>csr</authgroup>
                            <host-key-verification-type>none</host-key-verification-type>
                            <internal-connection-point>
                                <id>mgmt</id>
                                <connection-point-address>
                                    <address>192.168.200.201</address>
                                    <start>192.168.200.201</start>
                                    <end>192.168.200.210</end>
                                </connection-point-address>
                                <allowed-address-pair>
                                    <address>0.0.0.0</address>
                                    <netmask>0.0.0.0</netmask>
                                </allowed-address-pair>
                                <allowed-address-pair>
                                    <address>192.168.200.0</address>
                                    <netmask>255.255.255.0</netmask>
                                </allowed-address-pair>
                            </internal-connection-point>
                        </vdu>
                        <vnfd-connection-point>
                            <id>mgmt</id>
                            <network-name>mareis-network</network-name>
                        </vnfd-connection-point>
                    </vnf-info>
                </vnf-deployment>
            </esc>
        </vnf-info>
    </nfvo>
</config-template>
